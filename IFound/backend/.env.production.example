# Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ifound_production
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# JWT Secrets (CHANGE THESE!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@ifound.com

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ifound-production-uploads

# Or use local storage
USE_LOCAL_STORAGE=false
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
MAX_PHOTOS_PER_CASE=10

# Bounty Settings
MIN_BOUNTY_AMOUNT=10
MAX_BOUNTY_AMOUNT=100000
PLATFORM_COMMISSION_PERCENTAGE=10

# AI/ML Settings
AI_MODELS_PATH=./ai-models
FACE_MATCH_THRESHOLD=60
OBJECT_MATCH_THRESHOLD=50
IMAGE_SIMILARITY_THRESHOLD=70

# Logging
LOG_LEVEL=info
LOG_QUERIES=false
LOG_DIR=./logs

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=your_session_secret_change_this
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Rate Limiting
ENABLE_RATE_LIMIT=true

# Features Flags
ENABLE_AI_FEATURES=true
ENABLE_PAYMENTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEBSOCKETS=true

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Admin
ADMIN_EMAIL=admin@ifound.com
SUPPORT_EMAIL=support@ifound.com

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
