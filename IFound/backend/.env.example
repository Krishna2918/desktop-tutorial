# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ifound
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/ifound

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ifound-uploads
AWS_REKOGNITION_COLLECTION=ifound-faces

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_COMMISSION_RATE=0.10

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@ifound.app

# Frontend URL
FRONTEND_URL=http://localhost:3001
MOBILE_APP_SCHEME=ifound://

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3001

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_FACE_RECOGNITION=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Bounty Configuration
MIN_BOUNTY_AMOUNT=10
MAX_BOUNTY_AMOUNT_BASIC=5000
MAX_BOUNTY_AMOUNT_VERIFIED=50000
PLATFORM_COMMISSION_PERCENTAGE=10

# Case Configuration
CASE_EXPIRY_DAYS_BASIC=30
CASE_EXPIRY_DAYS_PREMIUM=90
MAX_PHOTOS_PER_CASE=10
