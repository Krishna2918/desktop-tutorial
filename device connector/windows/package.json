{
  "name": "@udc/windows",
  "version": "0.1.0",
  "description": "Universal Device Connector - Windows App (Electron)",
  "main": "dist/main/main.js",
  "author": "Universal Device Connector Team",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "start": "electron .",
    "package": "electron-builder",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist build out"
  },
  "dependencies": {
    "@udc/types": "*",
    "axios": "^1.6.5",
    "electron-store": "^8.1.0",
    "socket.io-client": "^4.6.0",
    "zustand": "^4.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^10.18.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/node": "^20.10.6",
    "@vitejs/plugin-react": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5"
  },
  "build": {
    "appId": "com.udc.windows",
    "productName": "Universal Device Connector",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico"
    }
  }
}
