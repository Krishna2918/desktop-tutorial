{
  "name": "universal-device-connector",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform device sync and control application",
  "author": "Universal Device Connector Team",
  "license": "UNLICENSED",
  "workspaces": [
    "backend",
    "windows",
    "shared/types"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:windows": "npm run dev --workspace=windows",
    "build": "npm-run-all build:*",
    "build:backend": "npm run build --workspace=backend",
    "build:windows": "npm run build --workspace=windows",
    "test": "npm-run-all test:*",
    "test:backend": "npm run test --workspace=backend",
    "test:windows": "npm run test --workspace=windows",
    "lint": "npm-run-all lint:*",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:windows": "npm run lint --workspace=windows",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "npm-run-all type-check:*",
    "type-check:backend": "npm run type-check --workspace=backend",
    "type-check:windows": "npm run type-check --workspace=windows",
    "clean": "npm-run-all clean:*",
    "clean:backend": "npm run clean --workspace=backend",
    "clean:windows": "npm run clean --workspace=windows",
    "clean:root": "rm -rf node_modules",
    "prepare": "husky install",
    "validate": "npm-run-all format:check lint type-check test"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
