# Universal Device Connector - Backend Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# Application
# ============================================
NODE_ENV=development
PORT=3000
APP_VERSION=0.1.0
API_PREFIX=/api/v1

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=udc_dev
DB_USERNAME=udc_user
DB_PASSWORD=change_me_in_production
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=udc:

# ============================================
# AWS S3 / MinIO
# ============================================
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=udc-files-dev
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_USE_SSL=false

# ============================================
# Authentication
# ============================================
JWT_SECRET=change_me_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=900
REFRESH_TOKEN_EXPIRES_IN=604800
BCRYPT_ROUNDS=10

# OAuth - Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# OAuth - Apple
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_KEY_ID=your_apple_key_id_here
APPLE_PRIVATE_KEY_PATH=./secrets/apple-auth-key.p8
APPLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/apple/callback

# ============================================
# HashiCorp Vault (Optional - for production)
# ============================================
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-only-token

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=5368709120
ALLOWED_MIME_TYPES=*
CHUNK_SIZE=1048576
VIRUS_SCAN_ENABLED=false

# ============================================
# Remote Control
# ============================================
MAX_SESSION_DURATION=1800
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVER_URL=
TURN_SERVER_USERNAME=
TURN_SERVER_CREDENTIAL=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_DESTINATION=console

# ============================================
# Observability
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

JAEGER_ENABLED=false
JAEGER_HOST=localhost
JAEGER_PORT=6831

# ============================================
# CORS
# ============================================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Security
# ============================================
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
TRUSTED_PROXIES=

# ============================================
# WebSocket
# ============================================
WS_PORT=3001
WS_PATH=/ws
WS_CORS_ORIGINS=*
