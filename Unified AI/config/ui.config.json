  "accessibility": {
    "focusOutline": true,
    "reduceMotion": false,
    "highContrast": false,
    "fontSize": 100,
    "keyboardNavigation": true,
    "screenReaderOptimized": true,
    "announcements": true
  },
  "performance": {
    "virtualScrolling": true,
    "lazyLoading": true,
    "debounceDelay": 300,
    "throttleDelay": 100,
    "maxVisibleMessages": 100,
    "imageOptimization": true,
    "codeHighlighting": true
  },
  "features": {
    "markdown": true,
    "codeBlocks": true,
    "syntax Highlighting": true,
    "fileAttachments": true,
    "imageUploads": true,
    "voiceInput": false,
    "autoSave": true,
    "autoSaveInterval": 30000,
    "spellCheck": true,
    "wordCount": true,
    "characterCount": false
  }
}
