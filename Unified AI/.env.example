# Application
NODE_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000
APP_NAME=Unified AI Hub

# Database (SQLite for local, PostgreSQL for cloud)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/app.db
DATABASE_ENCRYPTION_KEY=generate-with-openssl-rand-base64-32

# PostgreSQL (for cloud deployment)
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=unified_ai
# DATABASE_PASSWORD=
# DATABASE_NAME=unified_ai_hub
# DATABASE_SSL=true

# JWT Authentication
JWT_SECRET=generate-with-openssl-rand-base64-64
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=generate-with-openssl-rand-base64-32
ENCRYPTION_ALGORITHM=aes-256-gcm

# Storage
STORAGE_PATH=./data/attachments
MAX_ATTACHMENT_SIZE_MB=100
STORAGE_QUOTA_GB=10

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_PREFIX=unified_ai

# Redis (for sessions and job queue)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=unified_ai:

# External AI Providers (optional defaults, users add their own)
# These are NOT used directly - just for documentation
# Users configure providers via UI with encrypted storage

# OpenAI
# OPENAI_API_ENDPOINT=https://api.openai.com/v1

# Anthropic
# ANTHROPIC_API_ENDPOINT=https://api.anthropic.com/v1

# Google
# GOOGLE_API_ENDPOINT=https://generativelanguage.googleapis.com/v1

# Meta AI
# META_API_ENDPOINT=

# Billing (Stripe)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_MODE=test

# Email (for verification, password reset)
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@unifiedai.app
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# Telemetry (optional)
TELEMETRY_ENABLED=true
TELEMETRY_ANONYMOUS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags (override config files)
# FEATURE_ORCHESTRATION=true
# FEATURE_CLOUD_SYNC=true
# FEATURE_ENTERPRISE=false
